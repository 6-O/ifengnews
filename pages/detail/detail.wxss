/* pages/detail.wxss */
.header::after {
  content: '';
  display: block;
  clear: both;
  visibility: hidden;
  height: 0;
}

.headerTitle {
  box-sizing: border-box;
  float: left;
  width: 100%;
  padding: 30rpx;
  color: #262626;
  font-size: 48rpx;
  font-weight: bold;
  font-family: "微软雅黑";
  line-height: 70rpx;
}

.source,
.time {
  float: left;
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #999999;
}

.video {
  display: block;
  margin: 50rpx auto;
}

.artical--p,
.slide--p {
  margin: 30rpx 15rpx;
  font-size: 36rpx;
}

.artical--img,
.rich_pages,
.slide--img {
  display: block;
  float: left;
  width: 100%;
  margin: 30rpx 0;
}

.comments {
  width: 100%;
  margin-top: 50rpx;
}

.commentsHeder,
.recommendHeader {
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 76rpx;
  padding: 0 1em;
  border-bottom: solid 1rpx #e3e2e7;
  border-top: solid 1rpx #e3e2e7;
  background-color: #f7f7f7;
  color: #8D8D8D;
  font-size: 28rpx;
  line-height: 76rpx;
  font-weight: 600;
}

.commentsHeaderRight {
  color: #3e89fa;
}

.noComment,
.noRecommend {
  width: 100%;
  height: 152rpx;
  border-bottom: 0.5rpx solid #efefef;
  text-align: center;
  line-height: 152rpx;
  color: #999999;
  font-family: "微软雅黑";
}
.recommend {
  margin-bottom: 100rpx;
}

.bottomBar {
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: space-around;
  position: fixed;
  bottom: 0;
  width: 100%;
  border-top: 1rpx solid #e5e5e5;
  height: 98rpx;
  background: #ffffff;
}

.bottomBarItem {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50%;
  height: 98rpx;
  color: #1A1A1A;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  letter-spacing: 0.72rpx;
}

.bottomBarImg {
  width: 36rpx;
  height: 36rpx;
  margin-right: 19rpx;
}