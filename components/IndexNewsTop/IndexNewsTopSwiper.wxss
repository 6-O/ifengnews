.topSwiper {
  position: relative;
  width: 100%;
  height: 421rpx;
}

.topSwiperImg {
  width: 100%;
  height: 421rpx;
}

.topSwiperBottomImg {
  display: block;
  position: absolute;
  bottom: 0rpx;
  width: 100%;
  height: 80rpx;
}

.topSwiperTitle {
  display: block;
  position: absolute;
  top: 340rpx;
  left: 75rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 600rpx;
  font-size: 32rpx;
  line-height: 32rpx;
  color: #FFFFFF;
  text-align: center;
  font-family: "Microsoft YaHei";
  font-weight: 600;
}