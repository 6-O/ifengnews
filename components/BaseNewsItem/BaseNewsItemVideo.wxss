/* components/BaseNewsItemVideo.wxss */
.newsItem {
  width: 100%;
  border: 0.5rpx solid #efefef;
  padding: 24rpx 30rpx;
  box-sizing: border-box;
}

.newsItemTitle {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #1A1A1A;
  font-size: 36rpx;
  line-height: 40rpx;
}

.newsItemPreview {
  position: relative;
  width: 100%;
  height: 388rpx;
  margin-top: 24rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.newsItemPreviewIcon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 110rpx;
  height: 110rpx;
}

.newsItemFooter {
  width: 100%;
  padding-top: 24rpx;
}

.newsItemFooter::after {
  content: "";
  display: block;
  clear: both;
  height: 0;
  visibility: hidden;
}

.newsItemFooterSource {
  float: left;
  margin-right: 20rpx;
  color: #999999;
  font-size: 26rpx;
  line-height: 26rpx;
}

.newsItemFooterCommentIcon {
  float: left;
  width: 30rpx;
  height: 30rpx;
}

.newsItemFooterCommentNum {
  float: left;
  margin-left: 10rpx;
  color: #999999;
  font-size: 28rpx;
  line-height: 28rpx;
}