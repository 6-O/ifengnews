/* components/BaseNewsItem.wxss */
.newsItem {
  box-sizing: border-box;
  overflow: hidden;
  width: 100%;
  height: 180rpx;
  padding: 24rpx 28rpx;
  border: 0.5rpx solid #efefef;
}

.newsItemImg {
  float: left;
  width: 182rpx;
  height: 130rpx;
  margin-right: 32rpx;
}

.newsItemRight {
  float: left;
  width: 470rpx;
  height: 80rpx;
}

.newsItemTitle {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-wrap: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
  height: 76rpx;
  margin-bottom: 24rpx;
  color: #1A1A1A;
  font-size: 36rpx;
  line-height: 38rpx;
}

.newsItemSource {
  float: left;
  color: #999999;
  font-size: 26rpx;
  line-height: 26rpx;
  margin-right: 20rpx;
}

.newsItemIcon {
  float: left;
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.newsItemComments {
  float: left;
  font-size: 28rpx;
  line-height: 28rpx;
  color: #999999;
}