/* components/BaseVideoItem.wxss */
.videoPreview {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 421rpx;
}

.videoTitle {
  z-index: 1;
  box-sizing: border-box;
  display: block;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  padding: 25rpx 30rpx;
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 44rpx;
  word-wrap: break-word;
}

.videoPreviewImg {
  width: 100%;
  height: 421rpx;
}

.iconPlay {
  position: absolute;
  top: 170rpx;
  left: 320rpx;
  width: 110rpx;
  height: 110rpx;
}

.bottomImg {
  position: absolute;
  top: -2rpx;
  left: 0rpx;
  width: 100%;
  height: 80rpx;
}

.itemFooter {
  box-sizing: border-box;
  overflow: hidden;
  width: 100%;
  height: 96rpx;
  padding: 20rpx;
  color: #999999;
  line-height: 48rpx;
}
.videoSource {
  display: block;
  float: left;
  margin-right: 20rpx;
  font-size: 28rpx;
}
.iconComment {
  display: block;
  float: left;
  width: 30rpx;
  height: 30rpx;
  margin-right: 4rpx;
  margin-top: 10rpx;
}
.commentsNum {
  font-size: 28rpx;
  display: block;
}